<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context="doggieouthouse.com.doggieouthouse.UI.UI.BreedInfo">

    <include
        layout="@layout/logo_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/breed_info_breed_name_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#d4edd9"
                android:paddingBottom="2dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:paddingTop="2dp"
                android:text="Breed Name"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView9"
                android:layout_below="@+id/breed_info_breed_name_textView"
                android:text="Size: "
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/size_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_below="@+id/breed_info_breed_name_textView"
                android:layout_toRightOf="@+id/textView4"
                android:ellipsize="end"
                android:text="Size:"
                android:textColor="@android:color/background_dark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView9"
                android:layout_below="@+id/size_textView"
                android:text="Weight: "
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/weight_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/size_textView"
                android:layout_toRightOf="@+id/textView5"
                android:ellipsize="end"
                android:text="Weight:"
                android:textColor="@android:color/background_dark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView9"
                android:layout_below="@+id/weight_textView"
                android:text="Height: "

                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/height_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/weight_textView"
                android:layout_toRightOf="@+id/textView8"
                android:text="Height:"
                android:textColor="@android:color/background_dark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/height_textView"
                android:text="Life Span: "
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/life_span_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/height_textView"
                android:layout_toRightOf="@+id/textView9"
                android:text="Life Span:"
                android:textColor="@android:color/background_dark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView9"
                android:layout_below="@+id/life_span_textView"
                android:text="Origin: "
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/origin_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/life_span_textView"
                android:layout_toRightOf="@+id/textView10"
                android:text="Origin:"
                android:textColor="@android:color/background_dark"
                android:textSize="14sp" />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/origin_textView"
            android:layout_toRightOf="@+id/breed_info_breed_name_textView"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/dog_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/breed_info_breed_name_textView"
                android:baselineAlignBottom="true"
                app:srcCompat="@drawable/hd_logo" />
        </FrameLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/breed_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#d4edd9"
            android:paddingBottom="2dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="2dp"
            android:text="Breed Info"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/breed_info">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Group: "
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/group_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/textView20"
                        android:text="Group: "
                        android:textColor="@android:color/background_dark"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/group_textView"
                        android:text="History: "
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/history_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/group_textView"
                        android:layout_toRightOf="@+id/textView21"
                        android:text="History:"
                        android:textColor="@android:color/background_dark"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/history_textView"
                        android:text="Role: "
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/role_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/history_textView"
                        android:layout_toRightOf="@+id/textView22"
                        android:text="Role:"
                        android:textColor="@android:color/background_dark"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/role_textView"
                        android:text="Temperament: "
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/temperament_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/role_textView"
                        android:layout_toRightOf="@+id/textView23"
                        android:text="Temperament:"
                        android:textColor="@android:color/background_dark"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/temperament_textView"
                        android:text="Execerise: "
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/exercise_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/temperament_textView"
                        android:layout_toRightOf="@+id/textView24"
                        android:text="Exercise:"
                        android:textColor="@android:color/background_dark"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/exercise_textView"
                        android:text="Grooming: "
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/grooming_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/exercise_textView"
                        android:layout_toRightOf="@+id/textView25"
                        android:text="Grooming:"
                        android:textColor="@android:color/background_dark"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/grooming_textView"
                        android:text="Health Issue: "
                        android:textColor="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/health_issue_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/grooming_textView"
                        android:layout_toRightOf="@+id/textView26"
                        android:text="Health Issue:"
                        android:textColor="@android:color/background_dark"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/description_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/health_issue_textView"
                        android:text="Description:"
                        android:textColor="@android:color/background_dark"
                        android:textSize="14sp" />

                </RelativeLayout>

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/post_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#c2e8f9"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="POST" />

    </RelativeLayout>

</LinearLayout>
